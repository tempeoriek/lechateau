@using Nop.Core
@using Nop.Core.Infrastructure
@using Nop.Services.Localization
@using Nop.Web.Framework.Themes

@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

@if (string.IsNullOrEmpty(ViewBag.HideHeader))
{
    @Html.Action("HeaderLinks", "Common")
}




@{
    if (string.IsNullOrEmpty(ViewBag.HideMenu))
    {
        @Html.Partial("Menu");
    }

    if (IsSectionDefined("Left"))
    {
        @RenderSection("Left", false);
    }
}




<div id="body-wrapper hidden-xs">
    <div class="container-fluid cf-padding">
        <div class="row">
            <div class="col-md-2 col-lg-3 hidden-xs hidden-sm colKlein">

            </div>
            <div class="col-xs-12 col-md-8 col-lg-6 pt-alignment colGroot">
              

                @RenderBody()

            </div>
            <div class="col-xs-12 col-md-2 col-lg-3  colKlein">
                @if (IsSectionDefined("Right"))
                {
                    @RenderSection("Right", false);
                }
                
            </div>
            
        </div>
    </div>
    @Html.Action("Footer", "Common")
</div>






@section RootScripts{
    @if (IsSectionDefined("scripts"))
    {
        @RenderSection("scripts", required: false)
    }
}

@section RootHeaderSection{
    @if (IsSectionDefined("HeaderSection"))
    {
        @RenderSection("HeaderSection", false)}
}