@using Nop.Web.Models.Flitts.Lookbook;
@model ItemListModel


@{Layout = "~/Views/Shared/_LayoutOne.cshtml";
ViewBag.Title = "View";

}


<div class="container-fluid">
    <div class="col-xs-12 fadingIn transparent">
        <div class="carousel slide">
            <div class="carousel-inner">
                <img class="img-responsive center-block" src="~/Content/images/uploaded/Lookbook/@Model.Image" />
            </div>
            <!-- Controls -->
            @{
                if (ViewBag.Previous != null)
                {
                    <a class="carousel-arrow carousel-arrow-prev" href="@Url.Action("View", new { id =Html.AttributeEncode(ViewBag.Previous) })">
                        <i class="fa fa-angle-left fa-lg"></i>
                    </a>
                }

                if (ViewBag.Next != null)
                {
                    @*<a class="carousel-arrow carousel-arrow-next" href="@Url.Encode(Url.Action("View", new { id = ViewBag.Next }))">
                            <i class="fa fa-angle-right fa-lg"></i>
                        </a>*@
                    <a class="carousel-arrow carousel-arrow-next" href="@Url.Action("View", new { id = Html.AttributeEncode(ViewBag.Next )})">
                        <i class="fa fa-angle-right fa-lg"></i>
                    </a>
                }
            }

        </div>



    </div>
    <div class="lookbook-info">
        @Model.Caption
    </div>


</div>






