@model IList<ProductOverviewModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="related-products">
        <h2>Complete your outfit</h2>
        <div class="row d-none d-md-table">
            @foreach (var item in Model)
            {
                <div class="related-products-item col-12 col-md-4 d-md-table-cell">
                    <div class="img-similar-overlay">
                        <a href="@Url.RouteUrl("Product", new { SeName = item.SeName })" class="clean">
                            <img src="@item.DefaultPictureModel.ImageUrl" class="img-fluid image-similar-thumb" />
                        </a>
                        <div class="text-overlay">
                            <p>@item.Name</p>

                            <p>
                                @if (item.Quantity > 0)
                                {

                                    <div class="prices">
                                        @if (!String.IsNullOrEmpty(item.ProductPrice.OldPrice) || item.ProductPrice.DisplayTaxShippingInfo)
                                        {
                                            if (!String.IsNullOrEmpty(item.ProductPrice.OldPrice))
                                            {
                                                <span class="price old-price">@item.ProductPrice.OldPrice</span>
                                            }

                                            <span class="price actual-price">@item.ProductPrice.Price</span>
                                        }
                                        else
                                        {
                                            <span class="price actual-price">@item.ProductPrice.Price</span>
                                        }
                                    </div>

                                }
                                else
                                {
                                    <div class="prices"><span class="out-of-stock">Sold Out</span></div>
                                }
                            </p>

                        </div>
                    </div>

                </div>
            }

        </div>


      

        @*Mobile*@
        <div class="related-products d-block d-sm-none">
            @foreach (var item in Model)
        {

        <div class="col-xs-2 col-sm-2 catalog-line">
            <div class="product-item">
                <a href="@Url.RouteUrl("Product", new { SeName = item.SeName})" class="clean">
                    <img src="@item.DefaultPictureModel.ImageUrl" class="img-responsive center-block" />
                </a>
                <div class="description">
                    @if (item.Quantity > 0)
                        {
                        <div class="prices">
                            @if (!String.IsNullOrEmpty(item.ProductPrice.OldPrice) || item.ProductPrice.DisplayTaxShippingInfo)
                                {
                                    if (!String.IsNullOrEmpty(item.ProductPrice.OldPrice))
                                    {
                                <span class="price old-price">@item.ProductPrice.OldPrice</span>
                                    }

                                <span class="price actual-price">@item.ProductPrice.Price</span>
                                }
                                else
                                {
                                <span class="price actual-price">@item.ProductPrice.Price</span>
                                }
                        </div>

                        }
                        else
                        {
                        <div class="prices"><span class="out-of-stock">Sold Out</span></div>
                        }

                    <h3><a class="clean" href="@Url.RouteUrl("Product", new { SeName = item.SeName})">@item.Name</a></h3>
                </div>
            </div>

        </div>




        }
        </div>



    </div>
}