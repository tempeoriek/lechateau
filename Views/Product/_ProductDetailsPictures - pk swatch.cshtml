@model ProductDetailsModel
@using Nop.Web.Models.Catalog;



@if (Model.PictureModels.Count > 0)
{
    @*Brush image *@
    
        if (Model.PictureModels.Count > 1)
        {
            @*<div class="d-none d-md-block" style="position: absolute;top: 350px;left: -20px; z-index:5; max-width:256px;"><img src="@Model.PictureModels[1].FullSizeImageUrl" class="img-fluid" id="" /></div>*@
            <div class="d-none d-md-block" style="position: absolute;top: 250px;left: -20px; z-index:5; max-width:256px;"><img src="@Model.PictureModels[1].FullSizeImageUrl" class="img-fluid" id="" /></div>
        }



        <ul id="lightSlider">
            <!--skip the 2nd image (index:1) -->
            @for (int i = 0; i < Model.PictureModels.Count; i++)
            {

                var pic = Model.PictureModels[i];
                if (i != 1)
                {
                    <li data-thumb="@pic.FullSizeImageUrl" data-fancybox="images">
                        <img src="@pic.FullSizeImageUrl" class="img-fluid" />
                    </li>
                }
            }

           
            
        </ul>
}







